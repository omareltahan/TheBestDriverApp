<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/back"
        android:tint="@color/whitecolor"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/edit"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:padding="20sp"
            android:background="@drawable/drawer_profile_bg"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="80sp"
            android:layout_centerInParent="true"
            android:padding="20sp"
            android:background="@drawable/logo_resturant"
            android:layout_height="80sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="10sp"
            android:alpha="0.5"
            android:src="@drawable/drawer_dashes"
            android:layout_toStartOf="@id/profileimage"
            android:tint="@color/whitecolor"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/whitecolor"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30sp"
        android:textSize="22sp"
        android:text="Choose your language"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/radio"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:textColor="@color/whitecolor"
        android:textSize="18sp"
        android:text="Arabic"
        android:id="@+id/arabic"
        android:buttonTint="@color/whitecolor"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/whitecolor"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_height="0.5sp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:textColor="@color/whitecolor"
        android:textSize="18sp"
        android:id="@+id/english"
        android:text="English"
        android:buttonTint="@color/whitecolor"
        android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>
